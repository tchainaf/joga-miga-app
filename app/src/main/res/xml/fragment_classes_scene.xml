<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint motion:layout_editor_absoluteY="309dp" android:layout_height="wrap_content"
                    motion:layout_editor_absoluteX="57dp" android:layout_width="wrap_content"
                    android:id="@+id/editTextFee" motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintTop_toBottomOf="@+id/editTextTime" android:layout_marginTop="26dp"/>
        <Constraint motion:layout_editor_absoluteY="247dp" android:layout_height="wrap_content"
                    motion:layout_editor_absoluteX="59dp" android:layout_width="wrap_content"
                    android:id="@+id/editTextTime" motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintTop_toBottomOf="@+id/editTextWeekDay" android:layout_marginTop="26dp"/>
        <Constraint motion:layout_constraintEnd_toEndOf="parent" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" motion:layout_constraintTop_toBottomOf="@+id/editTextClass"
                    motion:layout_constraintHorizontal_bias="0.5" motion:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="26dp" android:id="@+id/editTextWeekDay"/>
        <Constraint android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/buttonSaveClass" motion:layout_constraintStart_toStartOf="@+id/editTextFee"
                    motion:layout_constraintEnd_toEndOf="@+id/editTextFee"
                    motion:layout_constraintTop_toBottomOf="@+id/editTextFee" android:layout_marginTop="72dp"
                    motion:layout_constraintHorizontal_bias="0.498"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>